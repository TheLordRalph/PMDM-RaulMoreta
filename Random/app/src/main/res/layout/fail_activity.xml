<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="200dp"
        android:text="ERROR"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:text="ERROR" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:text="Te has equivodado de número"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:text="Te has equivodado de número" />

    <TextView
        android:id="@+id/Numero_Correcto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="El numero correcto es:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Numero_Correcto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="El numero introducido es:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Numero_Incorrecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp" />
</LinearLayout>