<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Adivina_Numero"
        android:layout_width="229dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Adivina El Número"
        android:textSize="24sp"
        tools:text="Adivina El Número" />

    <TextView
        android:id="@+id/Descripción"
        android:layout_width="293dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Intenta adivinar el número del 0 al 9."
        android:textSize="16sp"
        tools:text="Intenta adivinar el número del 0 al 9." />

    <EditText
        android:id="@+id/Numero_Introducido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:inputType="number"></EditText>

    <Button
        android:id="@+id/resolver"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Resolver" />

    <TextView
        android:id="@+id/Intentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center" />

</LinearLayout>